#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <string.h>
int main(){
	char str[2333];
	int lens1=0;
	int k=1;
	int sum=0;
	
	while((str[lens1++]=getchar())!='\n');
	lens1--; 
	for(int i=0;i<lens1-1;i++)
	{if(str[i]<='/'||str[i]>=':')
	k=1;
	
	else if(k==1){
		sum++;
		k=0;
	}
	
	  }
	 


printf("%d",sum); }
